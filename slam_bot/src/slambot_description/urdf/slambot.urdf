<?xml version="1.0"?>
<robot name="slambot">

  <link name="base_link"/>

  <!-- IMU -->
  <link name="imu_link"/>
  <joint name="imu_mount" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0" rpy="0 0 3.1415926535"/>
  </joint>

  <!-- LiDAR -->
  <link name="laser_link"/>
  <joint name="laser_mount" type="fixed">
    <parent link="base_link"/>
    <child link="laser_link"/>
    <!-- You can edit XYZ if needed -->
    <origin xyz="0.10 0 0.15" rpy="0 0 0"/>
  </joint>

</robot>